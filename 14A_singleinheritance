#include <iostream>
using namespace std;
class Bands {
public :
string bd;
string sr;
void genre(){
    cout<<"Enter the name of band: "<<endl;
    cin>>bd>>sr;
}
};
class Lz : public
Bands {
    public:
     int est;
    void estd(){ 
    cout<<"Estalished: "<<endl;
    cin>>est;    
}
void display(){
    cout<< "The band is: "<<bd<<" "<<sr<<endl;
    cout<<"Established: "<<est<<endl;
}
};
int main()
{
    Lz d;
    d.genre();
    d.estd();
    d.display();
    return 0;
}
